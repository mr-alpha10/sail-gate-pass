# Database Configuration
# SQLite database file location (relative to project root)
DATABASE_URL="file:./dev.db"

# For production with PostgreSQL, use:
# DATABASE_URL="postgresql://username:password@localhost:5432/gatepass?schema=public"

# ============================================================
# EMAIL CONFIGURATION
# ============================================================
# Set EMAIL_ENABLED=true to send real emails
# Set EMAIL_ENABLED=false to use console logging (demo mode)
EMAIL_ENABLED=false

# SMTP Configuration
# ────────────────────────────────────────────────────────────
# For Gmail:
#   SMTP_HOST=smtp.gmail.com
#   SMTP_PORT=587
#   SMTP_SECURE=false
#   SMTP_USER=your.email@gmail.com
#   SMTP_PASSWORD=your-16-character-app-password
#
# For Outlook/Hotmail:
#   SMTP_HOST=smtp-mail.outlook.com
#   SMTP_PORT=587
#   SMTP_SECURE=false
#   SMTP_USER=your.email@outlook.com
#   SMTP_PASSWORD=your-password
#
# For Yahoo:
#   SMTP_HOST=smtp.mail.yahoo.com
#   SMTP_PORT=587
#   SMTP_SECURE=false
#   SMTP_USER=your.email@yahoo.com
#   SMTP_PASSWORD=your-app-password
# ────────────────────────────────────────────────────────────

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your.email@gmail.com
SMTP_PASSWORD=your-app-password

# Email sender details (what recipients see)
EMAIL_FROM_NAME=SAIL Gate Pass System
EMAIL_FROM_ADDRESS=noreply@sail.com
